@@ -431,8 +431,10 @@ void *alloc_insn_page(void)
        void *page;
 
        page = module_alloc(PAGE_SIZE);
-       if (page)
+       if (page) {
                set_memory_ro((unsigned long)page & PAGE_MASK, 1);
+               set_memory_x((unsigned long)page & PAGE_MASK, 1);
+       }
 
        return page;
 }


